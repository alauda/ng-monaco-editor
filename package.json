{
  "name": "ng-monaco-editor",
  "version": "4.0.1",
  "description": "Angular wrapper for monaco-editor",
  "repository": "git+https://github.com/alauda/ng-monaco-editor.git",
  "author": "Alauda Frontend",
  "contributors": [
    "Peng Xiao <pengxiao@outlook.com>",
    "JounQin <admin@1stG.me> (https://www.1stG.me)"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rimraf release && ng-packagr",
    "dev": "yarn start",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:style": "stylelint '**/*.{scss,ts}' --cache",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prepublishOnly": "yarn build",
    "release": "standard-version --no-verify --release-as",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 9001 -s node_modules/monaco-editor/dev",
    "storybook:build": "rimraf demo && build-storybook -s node_modules/monaco-editor/min -o demo"
  },
  "peerDependencies": {
    "@angular/core": ">=10.0.0",
    "lodash-es": ">=4.0.0",
    "monaco-editor": ">=0.20.0"
  },
  "devDependencies": {
    "@1stg/app-config": "^2.1.0",
    "@1stg/tslint-config": "^2.0.0",
    "@angular-devkit/build-angular": "^12.0.2",
    "@angular/cli": "^12.0.2",
    "@angular/common": "^12.0.2",
    "@angular/compiler": "^12.0.2",
    "@angular/compiler-cli": "^12.0.2",
    "@angular/core": "^12.0.2",
    "@angular/forms": "^12.0.2",
    "@angular/platform-browser": "^12.0.2",
    "@angular/platform-browser-dynamic": "^12.0.2",
    "@storybook/addon-actions": "^6.3.0-beta.2",
    "@storybook/addon-knobs": "^6.3.0-next.2",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/angular": "^6.3.0-beta.2",
    "@storybook/builder-webpack5": "^6.3.0-beta.2",
    "@storybook/cli": "^6.3.0-beta.2",
    "@storybook/manager-webpack5": "^6.3.0-beta.2",
    "@types/lodash-es": "^4.17.4",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.24.0",
    "monaco-editor-webpack-plugin": "^3.1.0",
    "monaco-yaml": "^2.5.1",
    "ng-packagr": "^12.0.2",
    "postcss": "^8.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "standard-version": "^9.3.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "tslint": "^6.1.3",
    "zone.js": "^0.11.4"
  },
  "resolutions": {
    "postcss-loader": "^5.3.0",
    "prettier": "^2.3.0"
  }
}
