{
  "extends": "@1stg/tsconfig/angular",
  "compilerOptions": {
    "baseUrl": "."
  },
  // Extending `angularCompilerOptions` from `tsconfig` is not working for now
  // it wil be supported in ng 12.0, see https://github.com/angular/angular/issues/36715
  // TODO: remove it after upgrading to ng 12.0
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "enableIvy": false,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictMetadataEmit": true,
    "strictTemplates": true,
    "trace": true
  },
  "exclude": ["node_modules", "dist", "release"]
}
