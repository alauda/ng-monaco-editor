{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2018"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["release", "dist"]
}
