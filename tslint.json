{
  "extends": ["@1stg/tslint-config/angular"],
  "rules": {
    "component-selector": [true, "element", "ng", "kebab-case"],
    "directive-selector": [true, "attribute", "ng", "camelCase"],
    "no-non-null-assertion": false,
    "validate-decorators": [
      true,
      {
        "Component": {
          "argument": 0,
          "properties": {
            "!host": "\\[class\\]",
            "!styles": ".*",
            "!moduleId": ".*",
            "changeDetection": "\\.OnPush$",
            "encapsulation": "\\.None$"
          }
        },
        "Directive": {
          "argument": 0,
          "properties": {
            "!host": "\\[class\\]"
          }
        },
        "NgModule": {
          "argument": 0,
          "properties": {
            "*": "^(?!\\s*$).+"
          }
        },
        "ContentChildren": {
          "argument": 1,
          "required": true,
          "properties": {
            "descendants": "^(true|false)$"
          }
        }
      },
      "src/**/!(*.spec).ts"
    ]
  }
}
